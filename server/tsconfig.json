{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "api/*": ["api/*"],
      "connections/*": ["connections/*"],
      "utils/*": ["utils/*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "exclude": ["./node_modules"],
  "include": ["./src"]
}