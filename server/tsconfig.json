{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "exclude": ["./node_modules"],
  "include": ["./src"]
}